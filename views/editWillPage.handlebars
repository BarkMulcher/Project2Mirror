<article class="card align-items-center text-dark" id="will" data-postId="{{willData.id}}">
    <a href='/dashboard' class="is-pulled-right"> &larr; back to dashboard</a>
    <h2 class="title mt-5">Edit Will</h2>
    <hr>
    <form class="update-will-form" id="update-form">
        <div>
            <label for="will-title">Title:</label>
            <input class="input" name="will-name" type="text" value="{{will.title}}" />
        </div>
        <div>
            <label for="will-content">Content:</label>
            <input class="textarea" name="will-description" type="text" value="{{will.description}}" />
        </div>
        <div class="is-pulled-right">
            {{!-- do we need this div? --}}
        </div>
        <button type="submit" class="button is-success" id="save-button">Save</button>
    </form>
</article>


